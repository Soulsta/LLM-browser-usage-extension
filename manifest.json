{
  "manifest_version": 2,
  "name": "Claude Token Tracker",
  "version": "1.0",
  "description": "Track your Claude token usage and get warnings before hitting limits",
  "permissions": [
    "storage",
    "https://claude.ai/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "blockchain-16.png",
    "32": "blockchain-32.png",
    "128": "blockchain-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "claude-token-tracker@yourdomain.com"
    }
  }
}